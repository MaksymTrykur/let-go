(ns test.simple)

(test "comparison"
      (and (= 1 1)
           (= 1 1 1 1)
           (= nil nil)
           (= true true)
           (= false false)
           (= "goo" "goo")
           (= 'foo 'foo)
           (= :pzoo :pzoo)
           (not= 1 2 1)
           (not= :bar 'bar)
           (not= :bar "bar")
           (not= 'bar "bar")
           (> 5 3)
           (not (> 2 3))
           (< 3 5)
           (not (< 3 2))
           ))

(test "logical ops"
      (and (= true (and))
           (= nil (or))
           (= 3 (and true 3))
           (= false (and false 3))
           (= false (and 1 2 false 3))
           (= 3 (or false 3))
           (= 1 (or 1 2 false 3))
           (= true (not nil))
           (= false (not 3))
           ))

(test "count"
      (and (zero? (count nil))
           (zero? (count '()))
           (zero? (count []))
           (zero? (count {}))
           (zero? (count ""))
           (= 3 (count ":^)"))
           (= 2 (count [2 3]))
           (= 2 (count '(2 3)))
           (= 2 (count {:a 1 :b 2}))
           ))